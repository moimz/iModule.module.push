{
	"id":"com.moimz.imodule.module.push",
	"icon":"fa-bell-o",
	"title":{
		"ko":"알림서비스"
	},
	"version":"3.0.0",
	"description":{
		"ko":"홈페이지 내 각종 알림기능과 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodules.io",
	"versionChecker":"https://api.moimz.com/download/latest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":true,
	"global":true,
	"databases":{
		"push_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11,
					"comment":"회원고유값"
				},
				"module":{
					"type":"varchar",
					"length":20,
					"comment":"알림을 전송한 모듈명"
				},
				"type":{
					"type":"varchar",
					"length":20,
					"comment":"알림대상"
				},
				"idx":{
					"type":"int",
					"length":11,
					"comment":"알림고유값"
				},
				"code":{
					"type":"varchar",
					"length":20,
					"comment":"알림종류"
				},
				"contents":{
					"type":"longtext",
					"comment":"알림내용"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"알림시각"
				},
				"is_checked":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE",
					"comment":"알림확인여부"
				},
				"is_readed":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE",
					"comment":"읽음여부"
				}
			},
			"indexes":{
				"midx,module,type,idx,code":"primary_key",
				"midx":"index",
				"module,type,idx,midx":"index"
			},
			"comment":"알림 수신내역 테이블"
		}
	}
}